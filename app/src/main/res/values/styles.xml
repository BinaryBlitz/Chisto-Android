<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/greyColor</item>
        <item name="colorControlHighlight">@color/greyColor</item>
    </style>

    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/greyColor</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="PromoButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@color/greyColor</item>
        <item name="colorAccent">@color/canceledColor</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/greyColor</item>
    </style>

</resources>
