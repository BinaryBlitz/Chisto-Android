<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:background="#ffffff"
             android:id="@+id/main"
             android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize">
        <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/action_bar">

            <ImageView
                    android:id="@+id/drawer_indicator"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back"
                    android:padding="13dp"
                    android:layout_gravity="start"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/about_str"
                    android:layout_gravity="center"
                    android:id="@+id/date_text_view"
                    android:gravity="center_vertical"
                    android:typeface="sans"
                    android:textSize="22sp"
                    android:textColor="#ffffff" />

        </FrameLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="56dp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="62dp"
                        android:src="@drawable/blue_logo"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="32dp"/>
                <TextView
                        android:text="@string/contact_us_str"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:orientation="vertical"
                            android:background="@drawable/right_border"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="56dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_phone"
                                android:padding="8dp"
                                android:layout_height="56dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="@string/call_us_str"
                                  android:textColor="@color/colorAccent"
                                  android:layout_marginTop="8dp"
                                  android:textSize="16sp"
                                  android:layout_gravity="center_horizontal"
                                  android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:orientation="vertical"
                            android:background="@drawable/right_border"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="56dp"
                                android:src="@drawable/ic_email"
                                android:padding="8dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="56dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="@string/email_str"
                                  android:textColor="@color/colorAccent"
                                  android:textSize="16sp"
                                  android:layout_marginTop="8dp"
                                  android:layout_gravity="center_horizontal"
                                  android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                        android:text="@string/about_social_str"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        android:gravity="center"/>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="56dp"
                            android:src="@drawable/ic_instagram"
                            android:layout_gravity="center"
                            android:layout_marginRight="88dp"
                            android:layout_marginEnd="88dp"
                            android:padding="4dp"
                            android:layout_height="56dp"/>

                    <ImageView
                            android:layout_width="56dp"
                            android:src="@drawable/ic_facebook"
                            android:padding="4dp"
                            android:layout_gravity="center"
                            android:layout_height="56dp"/>

                    <ImageView
                            android:layout_width="56dp"
                            android:src="@drawable/ic_vk"
                            android:padding="4dp"
                            android:layout_marginStart="88dp"
                            android:layout_marginLeft="88dp"
                            android:layout_gravity="center"
                            android:layout_height="56dp"/>
                </FrameLayout>
            </LinearLayout>

            <TextView android:layout_width="wrap_content"
                      android:text="@string/rate_str"
                      android:gravity="center"
                      android:layout_gravity="center_horizontal|bottom"
                      android:textColor="#ffffff"
                      android:id="@+id/add_btn"
                      android:textSize="18sp"
                      android:background="@drawable/button_border"
                      android:layout_marginTop="56dp"
                      android:layout_height="wrap_content"
                      android:paddingBottom="12dp"
                      android:paddingTop="12dp"
                      android:paddingEnd="22dp"
                      android:paddingLeft="22dp"
                      android:paddingRight="22dp"
                      android:paddingStart="22dp"/>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"

            android:layout_height="56dp">
        <TextView
                android:text="@string/about_bottom_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:textColor="#727272"
                android:textSize="14sp"
                android:gravity="start"/>

        <TextView
                android:text="@string/about_bottom_str2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:textColor="#212121"
                android:textSize="14sp"
                android:gravity="start"/>

        <ImageView
                android:layout_width="56dp"
                android:src="@drawable/ic_next"
                android:padding="16dp"
                android:layout_gravity="end"
                android:layout_height="56dp"/>
    </FrameLayout>
</FrameLayout>