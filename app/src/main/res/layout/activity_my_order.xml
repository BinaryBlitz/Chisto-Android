<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/refresh"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <ru.binaryblitz.Chisto.Utils.Animations.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:id="@+id/main"
                 android:background="#eaeaea"
                 android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:contentInsetStart="0dp"
                    android:contentInsetLeft="0dp"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    android:background="@color/colorPrimary"
                    android:minHeight="?attr/actionBarSize">
                <FrameLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/action_bar">

                    <ImageView
                            android:id="@+id/left_btn"
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_back"
                            android:padding="13dp"
                            android:layout_gravity="start"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_gravity="center"
                            android:id="@+id/date_text_view"
                            android:gravity="center_vertical"
                            android:typeface="sans"
                            android:textSize="22sp"
                            android:textColor="#ffffff" />

                </FrameLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="56dp"
                android:background="#ffffff"
                android:layout_height="match_parent">
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="70dp">

            <com.github.siyamed.shapeimageview.CircularImageView
                    app:siBorderWidth="2dp"
                    app:siBorderColor="#ffffff"
                    android:scaleType="centerCrop"
                    android:layout_width="34dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:id="@+id/category_icon"
                    android:layout_height="34dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/name"
                          android:layout_marginStart="60dp"
                          android:layout_marginEnd="50dp"
                          android:layout_marginRight="50dp"
                          android:textSize="20sp"
                          android:textColor="#212121"
                          android:layout_marginLeft="60dp"
                          android:layout_gravity="center_vertical"
                          android:layout_marginBottom="14dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/description"
                          android:maxLines="2"
                          android:textSize="12sp"
                          android:textColor="#727272"
                          android:layout_marginStart="60dp"
                          android:layout_marginLeft="60dp"
                          android:layout_marginEnd="100dp"
                          android:layout_marginTop="14dp"
                          android:layout_marginRight="100dp"
                          android:layout_gravity="center_vertical"/>
            </FrameLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:background="#ffffff"
                    android:layout_height="44dp">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="100dp"
                          android:layout_marginRight="100dp"
                          android:layout_marginLeft="56dp"
                          android:layout_marginStart="56dp"
                          android:textSize="16sp"
                          android:id="@+id/date"
                          android:textColor="@color/greyColor"
                          android:layout_gravity="center_vertical"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:id="@+id/status_text"
                          android:textColor="#727272"
                          android:layout_marginStart="130dp"
                          android:layout_marginLeft="130dp"
                          android:layout_marginEnd="40dp"
                          android:layout_marginBottom="17dp"
                          android:layout_marginRight="40dp"
                          android:layout_gravity="end|bottom"/>

                <ImageView
                        android:layout_width="20dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="24dp"
                        android:id="@+id/order_icon"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="15dp"
                        android:layout_height="20dp"/>
            </FrameLayout>
            <View android:layout_width="match_parent"
                  android:background="#b6b6b6"
                  android:layout_marginLeft="56dp"
                  android:layout_marginStart="56dp"
                  android:layout_height="1px" />
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="44dp">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="100dp"
                          android:text="@string/payment_type"
                          android:layout_marginRight="100dp"
                          android:layout_marginLeft="56dp"
                          android:layout_marginStart="56dp"
                          android:textSize="16sp"
                          android:textColor="@color/greyColor"
                          android:layout_gravity="center_vertical"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:id="@+id/payment_type_text"
                          android:textColor="#727272"
                          android:layout_marginStart="130dp"
                          android:layout_marginLeft="130dp"
                          android:layout_marginEnd="40dp"
                          android:layout_marginBottom="17dp"
                          android:layout_marginRight="40dp"
                          android:layout_gravity="end|bottom"/>

                <ImageView
                        android:layout_width="20dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="24dp"
                        android:id="@+id/payment_type_icon"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="15dp"
                        android:layout_height="20dp"/>
            </FrameLayout>
            <View android:layout_width="match_parent"
                  android:background="#b6b6b6"
                  android:layout_marginLeft="56dp"
                  android:layout_marginStart="56dp"
                  android:layout_height="1px" />
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="44dp">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="100dp"
                          android:text="@string/promo"
                          android:layout_marginRight="100dp"
                          android:layout_marginLeft="56dp"
                          android:layout_marginStart="56dp"
                          android:textSize="16sp"
                          android:textColor="@color/greyColor"
                          android:layout_gravity="center_vertical"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="12dp"
                          android:textColor="#ed495a"
                          android:layout_marginRight="12dp"
                          android:textSize="18sp"
                          android:id="@+id/promo_price_difference"
                          android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <View android:layout_width="match_parent"
                  android:background="#b6b6b6"
                  android:layout_marginTop="12dp"
                  android:layout_height="1px" />
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="44dp">
                <ImageView
                        android:layout_width="38dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_price_blue"
                        android:layout_height="38dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="100dp"
                          android:text="@string/final_price"
                          android:layout_marginRight="100dp"
                          android:layout_marginLeft="56dp"
                          android:layout_marginStart="56dp"
                          android:textSize="16sp"
                          android:textColor="@color/colorAccent"
                          android:layout_gravity="center_vertical"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="12dp"
                          android:layout_marginRight="12dp"
                          android:id="@+id/final_price"
                          android:textSize="18sp"
                          android:textColor="@color/colorAccent"
                          android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="44dp">
                <ImageView
                        android:layout_width="38dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_promo"
                        android:layout_height="38dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="100dp"
                          android:text="@string/promo"
                          android:layout_marginRight="100dp"
                          android:layout_marginLeft="56dp"
                          android:layout_marginStart="56dp"
                          android:textSize="16sp"
                          android:textColor="#ed495a"
                          android:layout_gravity="center_vertical"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="12dp"
                          android:layout_marginRight="12dp"
                          android:textSize="18sp"
                          android:id="@+id/promo"
                          android:textColor="#ed495a"
                          android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="44dp">
                <ImageView
                        android:layout_width="38dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_delivery"
                        android:layout_height="38dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="100dp"
                          android:text="@string/delivery"
                          android:layout_marginRight="100dp"
                          android:layout_marginLeft="56dp"
                          android:layout_marginStart="56dp"
                          android:textSize="16sp"
                          android:textColor="@color/greyColor"
                          android:layout_gravity="center_vertical"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="12dp"
                          android:layout_marginRight="12dp"
                          android:textSize="18sp"
                          android:id="@+id/delivery"
                          android:textColor="@color/greyColor"
                          android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="44dp">
                <ImageView
                        android:layout_width="38dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_wallet"
                        android:layout_height="38dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="100dp"
                          android:text="@string/order_price"
                          android:layout_marginRight="100dp"
                          android:layout_marginLeft="56dp"
                          android:layout_marginStart="56dp"
                          android:textSize="16sp"
                          android:textColor="@color/greyColor"
                          android:layout_gravity="center_vertical"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="12dp"
                          android:layout_marginRight="12dp"
                          android:id="@+id/cost"
                          android:textSize="18sp"
                          android:textColor="@color/colorAccent"
                          android:layout_gravity="end|center_vertical"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="12dp"/>

            <ru.binaryblitz.Chisto.Custom.RecyclerListView
                    android:layout_width="match_parent"
                    android:id="@+id/recyclerView"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:theme="@style/BrandButtonStyle"
                android:text="@string/order_questions"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:id="@+id/phone_call"
                android:layout_marginRight="-12dp"
                android:layout_marginLeft="-12dp"
                android:layout_marginBottom="-8dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_gravity="bottom"
                android:gravity="center"/>
        <FrameLayout
                android:layout_width="match_parent"
                android:background="#99000000"
                android:elevation="8dp"
                android:clickable="true"
                android:id="@+id/dialog"
                android:visibility="gone"
                android:layout_height="match_parent">

            <include layout="@layout/dialog_review" />

        </FrameLayout>
    </ru.binaryblitz.Chisto.Utils.Animations.RevealFrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>