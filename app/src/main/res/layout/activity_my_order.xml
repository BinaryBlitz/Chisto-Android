<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:background="#eaeaea"
             android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize">
            <FrameLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/action_bar">

                <ImageView
                        android:id="@+id/left_btn"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_back"
                        android:padding="13dp"
                        android:layout_gravity="start"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_gravity="center"
                        android:id="@+id/date_text_view"
                        android:gravity="center_vertical"
                        android:typeface="sans"
                        android:textSize="22sp"
                        android:textColor="#ffffff" />

            </FrameLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_marginTop="56dp"
                 android:layout_height="130dp">

        <ImageView
                android:layout_width="34dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/blue_circle"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:id="@+id/category_icon"
                android:padding="5dp"
                android:layout_height="34dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/name"
                  android:layout_marginStart="60dp"
                  android:layout_marginEnd="50dp"
                  android:layout_marginRight="50dp"
                  android:textSize="20sp"
                  android:textColor="#212121"
                  android:layout_marginLeft="60dp"
                  android:layout_gravity="center_vertical"
                  android:layout_marginBottom="34dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/description"
                  android:textSize="12sp"
                  android:textColor="#727272"
                  android:layout_marginStart="60dp"
                  android:layout_marginLeft="60dp"
                  android:layout_marginEnd="100dp"
                  android:layout_marginBottom="12dp"
                  android:layout_marginRight="100dp"
                  android:layout_gravity="center_vertical"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/number"
                  android:layout_marginStart="60dp"
                  android:layout_marginEnd="50dp"
                  android:layout_marginRight="50dp"
                  android:textSize="18sp"
                  android:textColor="#212121"
                  android:layout_marginLeft="60dp"
                  android:layout_gravity="bottom"
                  android:layout_marginBottom="14dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:textColor="#727272"
                  android:text="@string/your_order_str"
                  android:layout_marginStart="60dp"
                  android:layout_marginLeft="60dp"
                  android:layout_marginEnd="100dp"
                  android:layout_marginBottom="38dp"
                  android:layout_marginRight="100dp"
                  android:layout_gravity="bottom"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:textColor="#727272"
                  android:id="@+id/date_text"
                  android:layout_marginStart="130dp"
                  android:layout_marginLeft="130dp"
                  android:layout_marginEnd="100dp"
                  android:layout_marginBottom="17dp"
                  android:layout_marginRight="100dp"
                  android:layout_gravity="bottom"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:id="@+id/status_text"
                  android:textColor="#727272"
                  android:layout_marginStart="130dp"
                  android:layout_marginLeft="130dp"
                  android:layout_marginEnd="40dp"
                  android:layout_marginBottom="17dp"
                  android:layout_marginRight="40dp"
                  android:layout_gravity="end|bottom"/>

        <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:id="@+id/order_icon"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="15dp"
                android:layout_height="20dp"/>

        <View android:layout_width="match_parent"
              android:layout_gravity="bottom"
              android:background="#b6b6b6"
              android:layout_height="1px"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1900dp"
            android:layout_marginBottom="164dp"
            android:layout_height="match_parent">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </ScrollView>
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            android:layout_marginBottom="128dp"
            android:layout_height="36dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="100dp"
                  android:text="@string/your_order_str"
                  android:layout_marginRight="100dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginStart="16dp"
                  android:textSize="18sp"
                  android:textColor="@color/colorAccent"
                  android:layout_gravity="center_vertical"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="12dp"
                  android:text="3 800 \u20bd"
                  android:layout_marginRight="12dp"
                  android:textSize="18sp"
                  android:textColor="@color/colorAccent"
                  android:layout_gravity="end|center_vertical"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            android:layout_marginBottom="92dp"
            android:layout_height="36dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="100dp"
                  android:text="@string/delivery2_str"
                  android:layout_marginRight="100dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginStart="16dp"
                  android:textSize="18sp"
                  android:textColor="@color/colorAccent"
                  android:layout_gravity="center_vertical"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="12dp"
                  android:text="500 \u20bd"
                  android:layout_marginRight="12dp"
                  android:textSize="18sp"
                  android:textColor="@color/colorAccent"
                  android:layout_gravity="end|center_vertical"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            android:layout_marginBottom="56dp"
            android:layout_height="36dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="100dp"
                  android:text="@string/result_order_str"
                  android:layout_marginRight="100dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginStart="16dp"
                  android:textSize="18sp"
                  android:textColor="@color/colorAccent"
                  android:layout_gravity="center_vertical"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="12dp"
                  android:text="4 300 \u20bd"
                  android:layout_marginRight="12dp"
                  android:textSize="18sp"
                  android:textColor="@color/colorAccent"
                  android:layout_gravity="end|center_vertical"/>
    </FrameLayout>

    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:theme="@style/BrandButtonStyle"
            android:text="@string/order_questions_str"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:id="@+id/cont_btn"
            android:layout_marginRight="-12dp"
            android:layout_marginLeft="-12dp"
            android:layout_marginBottom="-8dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_gravity="bottom"
            android:gravity="center"/>
</FrameLayout>