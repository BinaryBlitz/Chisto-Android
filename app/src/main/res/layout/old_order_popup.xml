<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#ffffff"
              android:id="@+id/main_dialog_part"
              android:layout_margin="12dp"
             android:layout_gravity="center"
              android:layout_height="446dp">
    <ImageView
        android:layout_width="match_parent"
        android:background="#212121"
        android:scaleType="centerCrop"
        android:id="@+id/back_image"
        android:layout_height="110dp"/>

    <View android:layout_width="match_parent"
          android:background="@drawable/card_gradient"
          android:layout_height="110dp"/>

    <ImageView
            android:layout_width="56dp"
            android:src="@drawable/ic_near_me"
            android:background="@drawable/blue_circle"
            android:padding="5dp"
            android:id="@+id/logo_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="82dp"
            android:layout_height="56dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="22dp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:background="@drawable/right_border"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_courier"
                    android:padding="3dp"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/courier_str"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="12dp"
                      android:text="15.09.2016"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="4dp"
                      android:text="Бесплатно"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:background="@drawable/right_border"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="44dp"
                    android:src="@drawable/ic_delivery"
                    android:padding="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/delivery_str"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="12dp"
                      android:layout_gravity="center_horizontal"
                      android:text="11.09.2016"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="4dp"
                      android:text="с 11:00 до 20:00"
                      android:textSize="12sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/ic_cost"
                    android:padding="4dp"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/cost_str"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="18dp"
                      android:textSize="18sp"
                      android:text="3 800 \u20bd"
                      android:textColor="#388E3C"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:text="@string/last_order_str"
              android:textColor="#ffffff"
              android:layout_marginTop="18dp"
              android:textSize="18sp"
              android:layout_gravity="top|center_horizontal"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:textColor="#ffffff"
              android:layout_marginTop="46dp"
              android:textSize="18sp"
              android:id="@+id/name_text"
              android:textStyle="bold"
              android:layout_gravity="top|center_horizontal"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:textColor="#212121"
              android:layout_marginTop="156dp"
              android:textSize="16sp"
              android:id="@+id/desc_text"
              android:layout_gravity="top|center_horizontal"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:textColor="#727272"
              android:layout_marginBottom="76dp"
              android:background="@drawable/rounded_grey_border"
              android:paddingTop="8dp"
              android:paddingEnd="24dp"
              android:paddingLeft="24dp"
              android:paddingBottom="8dp"
              android:paddingRight="24dp"
              android:id="@+id/order_current_btn"
              android:paddingStart="24dp"
              android:gravity="center"
              android:textSize="18sp"
              android:layout_gravity="bottom|center_horizontal"
              android:layout_height="wrap_content"/>

    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:theme="@style/BrandButtonStyle"
            android:text="@string/view_all_str"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginRight="-12dp"
            android:layout_marginLeft="-12dp"
            android:layout_marginBottom="-8dp"
            android:id="@+id/cont_btn"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_gravity="bottom"
            android:gravity="center"/>
</FrameLayout>