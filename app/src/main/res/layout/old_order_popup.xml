<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
             android:background="#ffffff"
              android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:background="#212121"
        android:layout_height="110dp"/>

    <ImageView
            android:layout_width="56dp"
            android:src="@drawable/ic_near_me"
            android:background="@drawable/blue_circle"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="82dp"
            android:layout_height="56dp"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:background="@drawable/right_border"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="Курьер"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="qwerty"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="12dp"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="qwerty"
                      android:layout_marginTop="4dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:background="@drawable/right_border"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="Доставка"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="qwerty"
                      android:layout_marginTop="12dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="qwerty"
                      android:layout_marginTop="4dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="Стоимость"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="3400Р"
                      android:layout_marginTop="18dp"
                      android:textSize="18sp"
                      android:textColor="#388E3C"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:text="@string/last_order_str"
              android:textColor="#ffffff"
              android:layout_marginTop="18dp"
              android:textSize="18sp"
              android:layout_gravity="top|center_horizontal"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:text="В химчистке Bianca"
              android:textColor="#ffffff"
              android:layout_marginTop="46dp"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_gravity="top|center_horizontal"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:text="Химчистка премиум класса №1"
              android:textColor="#212121"
              android:layout_marginTop="156dp"
              android:textSize="16sp"
              android:layout_gravity="top|center_horizontal"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:text="Заказать в Bianco"
              android:textColor="#727272"
              android:layout_marginBottom="86dp"
              android:background="@drawable/rounded_grey_border"
              android:paddingTop="12dp"
              android:paddingEnd="24dp"
              android:paddingLeft="24dp"
              android:paddingBottom="12dp"
              android:paddingRight="24dp"
              android:paddingStart="24dp"
              android:gravity="center"
              android:textSize="18sp"
              android:layout_gravity="bottom|center_horizontal"
              android:layout_height="wrap_content"/>

    <TextView
            android:text="@string/view_all_str"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/city_not_found_btn"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_gravity="bottom"
            android:gravity="center"/>
</FrameLayout>