<?xml version="1.0" encoding="utf-8"?>
<ru.binaryblitz.Chisto.Utils.Animations.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/main">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="56dp"
                android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="48dp">
                <ImageView
                        android:layout_width="56dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_user_grey"
                        android:padding="14dp"
                        android:layout_height="56dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textStyle="bold"
                          android:layout_marginEnd="100dp"
                          android:text="@string/contact_info"
                          android:layout_marginRight="100dp"
                          android:textSize="18sp"
                          android:textColor="@color/colorAccent"
                          android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_text"
                    android:textColor="@color/greyColor"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:lines="1"
                    android:hint="@string/name"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    app:met_underlineColor="@color/greyColor"
                    app:met_baseColor="@color/blackColor"
                    app:met_textColor="@color/blackColor"
                    app:met_errorColor="@color/blackColor"
                    app:met_floatingLabel="normal"
                    app:met_helperTextColor="@color/greyColor"
                    app:met_primaryColor="@color/blackColor"
                    android:textColorHint="@color/greyColor"
                    android:layout_gravity="bottom" />

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastname_text"
                    android:textColor="@color/greyColor"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:lines="1"
                    android:hint="@string/lastname"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="12dp"
                    app:met_underlineColor="@color/greyColor"
                    app:met_baseColor="@color/blackColor"
                    app:met_textColor="@color/blackColor"
                    app:met_errorColor="@color/blackColor"
                    app:met_floatingLabel="normal"
                    app:met_helperTextColor="@color/greyColor"
                    app:met_primaryColor="@color/blackColor"
                    android:textColorHint="@color/greyColor"
                    android:layout_gravity="bottom" />

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone"
                    android:textColor="@color/greyColor"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:lines="1"
                    android:hint="@string/phone"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="12dp"
                    app:met_underlineColor="@color/greyColor"
                    app:met_baseColor="@color/blackColor"
                    app:met_textColor="@color/blackColor"
                    app:met_errorColor="@color/blackColor"
                    app:met_floatingLabel="normal"
                    app:met_helperTextColor="@color/greyColor"
                    app:met_primaryColor="@color/blackColor"
                    android:textColorHint="@color/greyColor"
                    android:layout_gravity="bottom" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="48dp">
                <ImageView
                        android:layout_width="56dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_address"
                        android:padding="14dp"
                        android:layout_height="56dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textStyle="bold"
                          android:id="@+id/address_btn"
                          android:layout_marginEnd="100dp"
                          android:text="@string/delivery_address"
                          android:layout_marginRight="100dp"
                          android:textSize="18sp"
                          android:textColor="@color/colorAccent"
                          android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/city_text"
                    android:textColor="@color/greyColor"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:lines="1"
                    android:hint="@string/city"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:enabled="false"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    app:met_underlineColor="@color/greyColor"
                    app:met_baseColor="@color/blackColor"
                    app:met_textColor="@color/blackColor"
                    app:met_errorColor="@color/blackColor"
                    app:met_floatingLabel="normal"
                    app:met_helperTextColor="@color/greyColor"
                    app:met_primaryColor="@color/blackColor"
                    android:textColorHint="@color/greyColor"
                    android:layout_gravity="bottom" />

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/street_text"
                    android:textColor="@color/greyColor"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:lines="1"
                    android:hint="@string/street"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="12dp"
                    app:met_underlineColor="@color/greyColor"
                    app:met_baseColor="@color/blackColor"
                    app:met_textColor="@color/blackColor"
                    app:met_errorColor="@color/blackColor"
                    app:met_floatingLabel="normal"
                    app:met_helperTextColor="@color/greyColor"
                    app:met_primaryColor="@color/blackColor"
                    android:textColorHint="@color/greyColor"
                    android:layout_gravity="bottom" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:id="@+id/house_text"
                        android:textColor="@color/greyColor"
                        android:inputType="textCapWords"
                        android:textSize="16sp"
                        android:lines="1"
                        android:hint="@string/house"
                        android:layout_marginStart="56dp"
                        android:layout_marginLeft="56dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="12dp"
                        app:met_underlineColor="@color/greyColor"
                        app:met_baseColor="@color/blackColor"
                        app:met_textColor="@color/blackColor"
                        app:met_errorColor="@color/blackColor"
                        app:met_floatingLabel="normal"
                        app:met_helperTextColor="@color/greyColor"
                        app:met_primaryColor="@color/blackColor"
                        android:textColorHint="@color/greyColor"
                        android:layout_gravity="bottom" />

                <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:id="@+id/flat_text"
                        android:textColor="@color/greyColor"
                        android:inputType="textCapWords"
                        android:textSize="16sp"
                        android:lines="1"
                        android:hint="@string/flat"
                        android:layout_marginRight="12dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginTop="24dp"
                        app:met_underlineColor="@color/greyColor"
                        app:met_baseColor="@color/blackColor"
                        app:met_textColor="@color/blackColor"
                        app:met_errorColor="@color/blackColor"
                        app:met_floatingLabel="normal"
                        app:met_helperTextColor="@color/greyColor"
                        app:met_primaryColor="@color/blackColor"
                        android:textColorHint="@color/greyColor"
                        android:layout_gravity="bottom" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="48dp">
                <ImageView
                        android:layout_width="56dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_comment_grey"
                        android:id="@+id/category_icon"
                        android:padding="14dp"
                        android:layout_height="56dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/name"
                          android:textStyle="bold"
                          android:layout_marginEnd="100dp"
                          android:text="@string/comment_title"
                          android:layout_marginRight="100dp"
                          android:textSize="18sp"
                          android:textColor="@color/colorAccent"
                          android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment_text"
                    android:textColor="@color/greyColor"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:lines="1"
                    android:hint="@string/comment"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    app:met_underlineColor="@color/greyColor"
                    app:met_baseColor="@color/blackColor"
                    app:met_textColor="@color/blackColor"
                    app:met_errorColor="@color/blackColor"
                    app:met_floatingLabel="normal"
                    app:met_helperTextColor="@color/greyColor"
                    app:met_primaryColor="@color/blackColor"
                    android:textColorHint="@color/greyColor"
                    android:layout_gravity="bottom" />

            <FrameLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="8dp"
                    android:background="#ffffff"
                    android:layout_height="56dp">
                <ImageView
                        android:layout_width="56dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_cost"
                        android:padding="14dp"
                        android:layout_height="56dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="50dp"
                          android:text="@string/cost_reg"
                          android:layout_marginRight="100dp"
                          android:textSize="18sp"
                          android:layout_marginStart="60dp"
                          android:layout_marginLeft="60dp"
                          android:textColor="@color/colorAccent"
                          android:layout_gravity="center_vertical"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="12dp"
                          android:text="3 800 \u20bd"
                          android:layout_marginRight="12dp"
                          android:textSize="18sp"
                          android:textColor="@color/colorAccent"
                          android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="68dp">
                <FrameLayout android:layout_width="match_parent"
                             android:layout_weight="1.0"
                             android:layout_height="match_parent">
                    <TextView
                            android:text="@string/bank"
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:textColor="#ffffff"
                            android:background="@drawable/pay_btn_back"
                            android:textSize="16sp"
                            android:layout_gravity="bottom"
                            android:gravity="center"/>

                    <FrameLayout android:layout_width="match_parent"
                                 android:id="@+id/bank_btn"
                                 android:background="?attr/selectableItemBackground"
                                 android:layout_height="match_parent">
                    </FrameLayout>
                </FrameLayout>

                <FrameLayout android:layout_width="match_parent"
                             android:layout_weight="1.0"
                             android:layout_height="match_parent">
                    <TextView
                            android:text="@string/pay"
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:textColor="#ffffff"
                            android:background="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_gravity="bottom"
                            android:gravity="center"/>

                    <FrameLayout android:layout_width="match_parent"
                                 android:id="@+id/pay_btn"
                                 android:background="?attr/selectableItemBackground"
                                 android:layout_height="match_parent">
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize">
        <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/action_bar">

            <ImageView
                    android:id="@+id/left_btn"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_back"
                    android:padding="13dp"
                    android:layout_gravity="start"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/reg"
                    android:layout_gravity="center"
                    android:id="@+id/date_text_view"
                    android:gravity="center_vertical"
                    android:typeface="sans"
                    android:textSize="20sp"
                    android:textColor="#ffffff" />

        </FrameLayout>
    </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:background="#99000000"
            android:id="@+id/dialog"
            android:visibility="gone"
            android:layout_height="match_parent">

        <include layout="@layout/popup_your_order" />

    </FrameLayout>
</ru.binaryblitz.Chisto.Utils.Animations.RevealFrameLayout>