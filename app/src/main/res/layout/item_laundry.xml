<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
             android:background="#ffffff"
        android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">
        <ImageView
                android:layout_width="72dp"
                android:layout_gravity="end"
                android:id="@+id/type"
                android:layout_marginTop="-2dp"
                android:src="@drawable/premium_bg"
                android:layout_height="72dp"/>
        <ImageView
                android:layout_width="64dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/category_icon"
                android:layout_height="64dp"/>

        <TextView
                android:layout_width="72dp"
                android:layout_gravity="end"
                android:id="@+id/type_text"
                android:rotation="45"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginTop="-2dp"
                android:paddingBottom="26dp"
                android:layout_height="72dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/name"
                  android:layout_marginStart="100dp"
                  android:textStyle="bold"
                  android:layout_marginEnd="100dp"
                  android:layout_marginRight="100dp"
                  android:textSize="18sp"
                  android:textColor="#212121"
                  android:layout_marginLeft="100dp"
                  android:layout_gravity="center_vertical"
                  android:layout_marginBottom="30dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/description"
                  android:textSize="14sp"
                  android:textColor="#727272"
                  android:layout_marginStart="100dp"
                  android:layout_marginLeft="100dp"
                  android:layout_marginEnd="100dp"
                  android:layout_marginTop="4dp"
                  android:layout_marginRight="100dp"
                  android:layout_gravity="center_vertical"
        />

        <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:rating="3.5"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="32dp"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:background="@drawable/right_border"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_courier"
                    android:padding="3dp"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/courier_str"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="12dp"
                      android:text="15.09.2016"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="4dp"
                      android:text="Бесплатно"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:background="@drawable/right_border"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="44dp"
                    android:src="@drawable/ic_delivery"
                    android:padding="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/delivery_str"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="12dp"
                      android:layout_gravity="center_horizontal"
                      android:text="11.09.2016"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="4dp"
                      android:text="с 11:00 до 20:00"
                      android:textSize="12sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/ic_cost"
                    android:padding="4dp"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/cost_str"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="18dp"
                      android:textSize="18sp"
                      android:text="3 800 \u20bd"
                      android:textColor="#388E3C"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_gravity="bottom"
          android:layout_marginTop="8dp"
          android:background="#b6b6b6"
          android:layout_height="1px" />
</LinearLayout>
    <FrameLayout android:layout_width="match_parent"
                 android:background="?attr/selectableItemBackground"
                 android:layout_height="match_parent">

    </FrameLayout>
    </FrameLayout>
