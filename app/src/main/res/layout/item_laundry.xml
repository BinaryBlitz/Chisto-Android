<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#ffffff"
              android:layout_height="match_parent">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <ImageView
                android:layout_width="72dp"
                android:layout_gravity="end"
                android:id="@+id/type"
                android:src="@drawable/premium_bg"
                android:layout_height="72dp"/>
        <ImageView
                android:layout_width="72dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/category_icon"
                android:src="@drawable/ic_app_mini_logo"
                android:layout_height="72dp"/>

        <TextView
                android:layout_width="72dp"
                android:layout_gravity="end"
                android:id="@+id/type_text"
                android:rotation="45"
                android:gravity="center"
                android:textColor="#ffffff"
                android:paddingBottom="26dp"
                android:text="qwerty"
                android:layout_height="72dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/name"
                  android:layout_marginStart="100dp"
                  android:textStyle="bold"
                  android:layout_marginEnd="100dp"
                  android:layout_marginRight="100dp"
                  android:textSize="18sp"
                  android:text="qwerty"
                  android:textColor="#212121"
                  android:layout_marginLeft="100dp"
                  android:layout_gravity="center_vertical"
                  android:layout_marginBottom="26dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/description"
                  android:textSize="16sp"
                  android:textColor="#727272"
                  android:text="qwety"
                  android:layout_marginStart="100dp"
                  android:layout_marginLeft="100dp"
                  android:layout_marginEnd="100dp"
                  android:layout_marginRight="100dp"
                  android:layout_gravity="center_vertical"
                  android:layout_marginBottom="4dp"/>

        <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:rating="3.5"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="18dp"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:background="@drawable/right_border"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_courier"
                    android:padding="3dp"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/courier_str"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="qwerty"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="12dp"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="qwerty"
                      android:layout_marginTop="4dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:background="@drawable/right_border"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="44dp"
                    android:src="@drawable/ic_delivery"
                    android:padding="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/delivery_str"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="qwerty"
                      android:layout_marginTop="12dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="qwerty"
                      android:layout_marginTop="4dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/ic_cost"
                    android:padding="4dp"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/cost_str"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="3400ла"
                      android:layout_marginTop="18dp"
                      android:textSize="18sp"
                      android:textColor="#388E3C"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>