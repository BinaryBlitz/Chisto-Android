<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:background="#ffffff"
             android:layout_height="match_parent">
    <ImageView
            android:layout_width="match_parent"
            android:background="#212121"
            android:id="@+id/back_image"
            android:layout_height="110dp"/>

    <ImageView
            android:layout_width="56dp"
            android:src="@drawable/ic_near_me"
            android:background="@drawable/blue_circle"
            android:padding="5dp"
            android:id="@+id/logo_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="82dp"
            android:layout_height="56dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="160dp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:background="@drawable/right_border"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_courier"
                    android:padding="3dp"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/courier_str"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="12dp"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="4dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:background="@drawable/right_border"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="44dp"
                    android:src="@drawable/ic_delivery"
                    android:padding="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="44dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/delivery_str"
                      android:textColor="@color/colorAccent"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="12dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="4dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:textStyle="bold"
              android:textColor="#ffffff"
              android:layout_marginTop="18dp"
              android:textSize="18sp"
              android:layout_gravity="top|center_horizontal"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:textColor="#ffffff"
              android:layout_marginTop="46dp"
              android:textSize="18sp"
              android:id="@+id/name_text"
              android:layout_gravity="top|center_horizontal"
              android:layout_height="wrap_content"/>

    <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:rating="3.5"
            android:stepSize="0.5"
            android:numStars="5"
            android:layout_marginTop="80dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="80dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="end"
            android:textColor="#ffffff"
            android:text="Отзывы"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:background="#eaeaea"
            android:layout_marginTop="260dp"
            android:layout_marginBottom="144dp"
            android:layout_height="match_parent">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/order_help_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#c9c9c9"
                        android:padding="12dp"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            android:layout_marginBottom="100dp"
            android:layout_height="44dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:layout_marginEnd="100dp"
                  android:text="@string/your_order_str"
                  android:layout_marginRight="100dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginStart="16dp"
                  android:textSize="18sp"
                  android:textColor="@color/colorAccent"
                  android:layout_gravity="center_vertical"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:layout_marginEnd="12dp"
                  android:text="3800Р"
                  android:layout_marginRight="12dp"
                  android:textSize="18sp"
                  android:textColor="@color/colorAccent"
                  android:layout_gravity="end|center_vertical"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            android:layout_marginBottom="56dp"
            android:layout_height="44dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:layout_marginEnd="100dp"
                  android:text="@string/delivery2_str"
                  android:layout_marginRight="100dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginStart="16dp"
                  android:textSize="18sp"
                  android:textColor="@color/colorAccent"
                  android:layout_gravity="center_vertical"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:layout_marginEnd="12dp"
                  android:text="3800Р"
                  android:layout_marginRight="12dp"
                  android:textSize="18sp"
                  android:textColor="@color/colorAccent"
                  android:layout_gravity="end|center_vertical"/>
    </FrameLayout>
    <TextView
            android:text="Оформить заказ: 4300"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/cont_btn"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_gravity="bottom"
            android:gravity="center"/>
</FrameLayout>