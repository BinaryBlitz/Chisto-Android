<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:id="@+id/main"
             android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize">
            <FrameLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/action_bar">

                <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_back"
                        android:padding="13dp"
                        android:layout_gravity="start"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/profile"
                        android:layout_gravity="center"
                        android:id="@+id/date_text_view"
                        android:gravity="center_vertical"
                        android:typeface="sans"
                        android:textSize="22sp"
                        android:textColor="#ffffff" />

            </FrameLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="56dp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="bottom"
                    android:background="#ffffff"
                    android:id="@+id/contact_data_btn"
                    android:layout_height="68dp">

                <ImageView
                        android:layout_width="56dp"
                        android:src="@drawable/ic_user_blue"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_height="56dp"/>

                <TextView
                        android:text="@string/contact_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="60dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:gravity="start"/>

                <ImageView
                        android:layout_width="56dp"
                        android:src="@drawable/ic_next"
                        android:padding="16dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_height="56dp"/>

                <FrameLayout android:layout_width="match_parent"
                             android:background="?attr/selectableItemBackground"
                             android:layout_height="match_parent">

                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="bottom"
                    android:background="#ffffff"
                    android:id="@+id/my_orders_btn"
                    android:layout_height="68dp">

                <ImageView
                        android:layout_width="56dp"
                        android:src="@drawable/ic_my_orders"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_height="56dp"/>

                <TextView
                        android:text="@string/my_orders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="60dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:gravity="start"/>

                <ImageView
                        android:layout_width="56dp"
                        android:src="@drawable/ic_next"
                        android:padding="16dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_height="56dp"/>

                <FrameLayout android:layout_width="match_parent"
                             android:background="?attr/selectableItemBackground"
                             android:layout_height="match_parent">

                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="bottom"
                    android:background="#ffffff"
                    android:id="@+id/about_btn"
                    android:layout_height="68dp">

                <ImageView
                        android:layout_width="56dp"
                        android:src="@drawable/ic_app_mini_logo"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_height="56dp"/>

                <TextView
                        android:text="@string/about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="60dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:gravity="start"/>

                <ImageView
                        android:layout_width="56dp"
                        android:src="@drawable/ic_next"
                        android:padding="16dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_height="56dp"/>

                <FrameLayout android:layout_width="match_parent"
                             android:background="?attr/selectableItemBackground"
                             android:layout_height="match_parent">

                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/rules_btn"
                    android:background="#ffffff"
                    android:layout_height="68dp">

                <ImageView
                        android:layout_width="56dp"
                        android:src="@drawable/ic_help"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_height="56dp"/>

                <TextView
                        android:text="@string/rules"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="60dp"
                        android:maxLines="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:gravity="start"/>

                <ImageView
                        android:layout_width="56dp"
                        android:src="@drawable/ic_next"
                        android:padding="16dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_height="56dp"/>

                <FrameLayout android:layout_width="match_parent"
                             android:background="?attr/selectableItemBackground"
                             android:layout_height="match_parent">

                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:theme="@style/BrandButtonStyle"
            android:text="@string/log_out"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/quit_btn"
            android:layout_marginRight="-12dp"
            android:layout_marginLeft="-12dp"
            android:layout_marginBottom="-8dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_gravity="bottom"
            android:gravity="center"/>
</FrameLayout>